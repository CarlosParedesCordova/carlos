<div class="login">
    <div class="inicio">
        {{#if error}}
        <div class="alert alert-danger"> <h1 style="color:#FF0000">{{error}}</h1></div>
        {{/if}}
        <form method="POST" action="/iniciar_sesion">
            <div class="login__row">
                <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                    <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                </svg>
                <input type="text" class="login__input name" name="correo" placeholder="Username" required/>
            </div>
            <div class="login__row">
                <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                    <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                </svg>
                <input type="password" class="login__input pass" name="clave"  placeholder="Password" required/>
            </div>
            <button type="submit" class="login__submit">Ingresar</button>

            <p class="login__signup">No posee una Cuenta? <a href="/registro">Registrate</a></p>
            <p class="login__signup"> <a href="/">Pagina Principal</a></p>

        </form>

    </div>
</div>