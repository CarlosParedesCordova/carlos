<title>{{titulo}}</title>
<script type="text/javascript" src="https://unpkg.com/jspdf@latest/dist/jspdf.min.js"></script>
<script type="text/javascript" src="/js/html2canvas.js"></script>
<script type="text/javascript">

    function genPDF() {
    $('#bDescargar').attr('style', 'visibility: hidden');
    html2canvas(document.getElementById('main-container')).then(function (canvas) {
    var img = canvas.toDataURL('image/png');
    var doc = new jsPDF();
    doc.addImage(img, 'JPEG', 20, 20);
    doc.save('test.pdf');
    });
    }
</script>
<div id="main-container">

    <div class="box">
        <div class='inner'>
            <h1><b style="background: red"></b></b>
                <p style="color:#1E0A89">Computerized Parking</p>
            </h1>
            <h1>{{usuario.nombre}}
                {{usuario.apellido}}
            </h1>
            <div class='info clearfix'>

                <div class='wp'>Vehiculo<h6>{{#each carro}}
                        {{this.placa}}
                        {{/each}} </h6></div>
                <div class='wp'>Hora de Entrada<h6>{{#each tikect}}
                        {{this.horaInicio}}
                        {{/each}} </h6></div>
                <div class='wp'>Hora de Entrada<h6>{{#each tikect}}
                        {{this.horaFin}}
                        {{/each}}</h6></div>
                <div class='wp' style="width: 30%">Fecha<h6>{{#each tikect}}
                        {{this.fecha}}
                        {{/each}}</h6></div>
            </div>
            <div class='total clearfix'>
                <h2>Total :   

                    <script>
                        var total = 0;
                        {{#each tikect}}
                        total += {{this.precio}};
                        {{/each}}
                                document.write('$ ' + total);
                    </script>
                </h2>
            </div>
        </div>
        <div id="bDescargar" class="button" style="background: wheat ;width: 20%; height: 42px;"><a href="javascript:genPDF()" ><ul>Descargar Tikect</ul></a></div>
    </div>

</div>




